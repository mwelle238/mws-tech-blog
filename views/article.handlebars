<div class="card card-rounded">
  <div class="card-header display-flex justify-space-between align-center p-2 bg-dark text-link">
    <h2>{{title}}</h2>  
  </div>
  <div class="card-body bg-light text-dark">
    <p>{{body}}</p>
  </div>
  <div class="card-footer bg-dark text-light">
    <p>By: {{user.name}} on {{format_date date_created}}</p>
  </div>
</div>
{{#each comments as |comment| }}
<div class="card card-rounded w-50 ml-5 justify-center">
  <div class="card-header bg-dark text-link">
    <h6>({{format_date comment.date_created}}){{comment.user.name}} said:</h6>
  </div>
  <div class="card-body bg-light text-dark">
    <p>{{comment.comment}}</p>
  </div>
</div>
{{/each}}
{{#if logged_in}}
<button class="btn btn-primary" id="comment-button">Add Comment</button>
{{/if}}
<form class="form comment-form display-none">
  <div class="form-group">
    <label for="comment">Comment:</label>
    <textarea class="form-input" id="comment" name="comment" data-id="{{id}}" data-user="{{user_id}}"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Save Comment</button>
  </div>
</form>

<script src="../js/article.js"></script>