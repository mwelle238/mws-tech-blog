<div class="row">
  <div class="col-auto">
    <h2 class="text-black">Welcome, {{name}}!</h2>
    <hr>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 text-white">
    <h3>Create a New Post:</h3>

    <form class="form new-article-form">
      <div class="form-group">
        <label for="article-title">Title:</label>
        <input class="form-input" type="text" id="article-title" name="article-title" />
      </div>
      <div class="form-group">
        <label for="article-body">Body:</label>
        <textarea class="form-input" id="article-body" name="article-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if articles.length}}
  <div class="col-md-6 text-black">
    <h3>Previous Posts:</h3>

    {{#each articles as |article|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/article/{{article.id}}" class="text-danger">{{article.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-primary" data-id="{{article.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
